<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pennyjoy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PennyJoy">

        <activity
            android:name=".SplashScreenActivity"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SlideActivity"
            android:noHistory="true"></activity>
        <activity android:name=".AddGoalActivity" />
        <activity
            android:name=".ResultOfQuizActivity"
            android:noHistory="true" />
        <activity android:name=".QuestionsActivity" />
        <activity android:name=".HistoryActivity" />
        <activity
            android:name=".SignInActivity"
            android:noHistory="true" />
        <activity android:name=".SetUserActivity" />
        <activity android:name=".SetPasswdActivity" />
        <activity android:name=".MoneyPigActivity" />
        <activity android:name=".AddGoodAndOtherActivity" />
        <activity android:name=".ChartsActivity" />
        <activity android:name=".SignUpActivityNoAcc1" />
        <activity android:name=".SignUpActivityNoAcc2" />
        <activity
            android:name=".SignUpActivityNoAcc3"
            android:noHistory="true" />
        <activity android:name=".MainActivity" />

        <receiver android:name="Notifycations.ReminderForTimer" />
    </application>

</manifest>