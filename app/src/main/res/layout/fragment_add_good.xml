<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp">
   <TextView
       android:id="@+id/lblCategoryFrag"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/CategoryAddGood"
       android:textColor="@color/white"
       android:layout_centerHorizontal="true"
       android:textSize="30dp"
       />
   <Spinner
       android:id="@+id/categoryDropDown"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:background="@drawable/bodyforcategoryspinner"
       android:layout_marginTop="50dp"
       />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_alignParentRight="true"
       android:layout_marginRight="50dp"
       android:src="@drawable/selectorforspinner"
       android:layout_marginTop="60dp"/>
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp">
   <TextView
       android:id="@+id/lblNameFrag"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/nameAddGood"
       android:textColor="@color/white"
       android:layout_centerHorizontal="true"
       android:textSize="30dp"

       />
   <EditText
       android:id="@+id/txtNameOfGood"
       android:layout_width="323dp"
       android:maxLength="10"
       android:layout_height="37dp"
       android:layout_centerHorizontal="true"
       android:paddingLeft="20dp"
       android:background="@drawable/body_for_edit_text"
       android:layout_marginTop="50dp"/>
  </RelativeLayout>



  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp">
   <TextView
       android:id="@+id/lblCostOfgood"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/costAddGood"
       android:textColor="@color/white"
       android:layout_centerHorizontal="true"
       android:textSize="30dp"
       />


   <EditText
       android:id="@+id/txtCostOfGood"
       android:layout_width="323dp"
       android:layout_height="37dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="50dp"
       android:inputType="numberDecimal"
       android:paddingLeft="20dp"
       android:maxLength="10"
       android:background="@drawable/body_for_edit_text" />

   <TextView
       android:id="@+id/currencyOfCostInAddGood"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_alignParentRight="true"
       android:layout_marginTop="50dp"
       android:textColor="@color/black"
       android:textSize="29dp"
       android:layout_marginRight="70dp"/>


  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp">


   <EditText
       android:hint="@string/purchaseOfPurpose"
       android:id="@+id/txtPurchaseOfPurpose"
       android:layout_width="310dp"
       android:layout_height="130dp"
       android:layout_centerHorizontal="true"
       android:gravity="top"
       android:paddingTop="10dp"
       android:paddingLeft="10dp"
       android:maxLength="120"
       android:layout_marginTop="40dp"
       android:background="@drawable/body_for_edit_text"/>
   <TextView
       android:id="@+id/counterOfTextInputAddGood"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_alignParentRight="true"
       android:text="0/120"
       android:textSize="17dp"
       android:layout_marginTop="135dp"
       android:layout_marginRight="70dp"/>
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp">
   <ImageButton
       android:id="@+id/btnAddGoodInFrag"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@color/black"
       android:layout_centerHorizontal="true"
       android:foreground="?android:attr/selectableItemBackground"
       android:layout_marginTop="20dp"
       app:srcCompat="@drawable/addgoodbtn"

       tools:ignore="VectorDrawableCompat"

       />
  </RelativeLayout>



  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp">
   <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/historyBtn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_centerHorizontal="true"

       android:layout_marginRight="16dp"
       android:backgroundTint="@color/white"
       android:src="@drawable/clock"
       app:maxImageSize="50dp"
       />
  </RelativeLayout>


 </LinearLayout>
 <ProgressBar
     android:id="@+id/progressBarInAddGood"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:indeterminateTint="@color/purple_500"
     android:layout_centerInParent="true"
     android:visibility="invisible"
     />



</RelativeLayout>